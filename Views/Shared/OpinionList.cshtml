@model IEnumerable<TPLOCAL1.Models.Opinion>


<!DOCTYPE html>

<html>

@{
    ViewData["Title"] = "Liste des avis";
    ViewData["Title2"] = "Liste des avis";
    ViewData["Lien"] = "Form";
    ViewData["Lien2"] = "Formulaire";
}
    
<body>

    <table>
        <tr>
            <th colspan="3">Liste</th>
        </tr>
        <tr>
            <td>Nom</td>
            <td>Prénom</td>
            <td>Avis donné</td>
        </tr>

        @{

            foreach (var avis in Model)
            {
                <tr>
                    <td>@avis.LastName</td>
                    <td>@avis.FirstName</td>
                    @if (@avis.OpinionGiven.Substring(0, 1) == "O")
                    {
                        <td style="background-color:green">@avis.OpinionGiven</td>
                    }
                    else
                    {
                        <td style="background-color:red">@avis.OpinionGiven</td>
                    }
                </tr>
            }
            
            
        }

    </table>
        

</body>

</html>
